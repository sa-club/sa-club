                                            "example": "Требуется аутентификация"                                                
                                        }        
                                    }
                                }
                            }                            
                        }
                    }
                }
            },
            "delete":{
                "tags":["Изменение данных"],
                "summary": "Удаление записи",
                "description": "Метод удаляет учётную запись студента из системы",
                "operationId": "deleteStudent",
                "parameters": [    
                    {
                        "in":"header",
                        "name": "Token-Students",
                        "description": "Токен авторизации",
                        "required": true, 
                        "schema": {
                            "type": "string",                           
                            "example": "0586cc297ce40e185627312168235170"
                        }
                    },
                    {
                        "name": "id",
                        "description": "ID студента",
                        "in": "path",
                        "required": true,
                        "schema":{
                            "type": "integer",
                            "minimum": 0
                        }
                    }
                ],
                    "responses": {
                        "200":{
                            "description": "Запись удалена",
                            "content": {
                                "application/json":{
                                    "schema":{
                                        "type":"object" ,
                                        "properties": {
                                            "status":{
                                                "type": "boolean",
                                                "description": "Статус",
                                                "example": "true"
                                            },
                                            "message":{
                                                "type": "string",
                                                "description": "Сообщение",
                                                "example": "Запись удалена"                                                
                                            }         
                                        }
                                    }
                                }                            
                            }
                        },
                        "400":{
                            "description": "Запись не удалена",
